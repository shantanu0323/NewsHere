<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAppearance">@style/my_tab_text</item>
        <item name="android:listDivider">@color/colorListDivider</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:colorAccent">@color/colorAccent2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/colorAccent2</item>
        <item name="android:calendarTextColor">#fff</item>
        <item name="android:textAppearance">@style/CustomTextStyle</item>
        <item name="android:dayOfWeekBackground">#fff</item>
        <item name="android:yearListSelectorColor">#0f9</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Theme.Dialog">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>
    <!--Base.TextAppearance.AppCompat-->
    <style name="my_tab_text" parent="Base.Widget.Design.TabLayout">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="colorListDivider">#b54348</color>
</resources>
